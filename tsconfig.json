{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    // "declaration": true,
    // "declarationDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "@engine/*": ["src/*"],
      "@plugin/*": ["plugin/*"],
      "@addon/*": ["addon/*"],
      "@mock/*": ["mock/*"],
    }
  },
  "include": [
    "src",
    "plugin",
    "addon",
    "mock",
    "test"
  ]
}
